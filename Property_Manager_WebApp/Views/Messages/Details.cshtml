@model Property_Manager_WebApp.Models.Message

@{
    ViewData["Title"] = "Message Details";
}

<h1>Message Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">From</dt>
        <dd class="col-sm-10">@Model.Sender.FullName</dd>

        <dt class="col-sm-2">To</dt>
        <dd class="col-sm-10">@Model.Receiver.FullName</dd>

        <dt class="col-sm-2">Content</dt>
        <dd class="col-sm-10">@Model.Content</dd>

        <dt class="col-sm-2">Sent At</dt>
        <dd class="col-sm-10">@Model.SentAt?.ToString("g")</dd>
    </dl>
</div>

<div>
    <a asp-action="CreateReply" asp-route-recipientId="@Model.SenderId" class="btn btn-primary">Reply</a>
    <a asp-action="Index" class="btn btn-secondary">Back to Messages</a>
</div>
