@model Property_Manager_WebApp.Models.Message

@{
    ViewData["Title"] = "Send Message";
}

<h1>Send Message</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="ReceiverId" class="control-label">Recipient</label>
        <select asp-for="ReceiverId" class="form-control" asp-items="ViewBag.ReceiverId"></select>
    </div>

    <div class="form-group">
        <label asp-for="Content" class="control-label">Message</label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to Messages</a>
