@model IEnumerable<Property_Manager_WebApp.Models.Message>

@{
    ViewData["Title"] = "Your Messages";
}

<h1>Your Messages</h1>

<p>
    <a asp-action="Create">Send New Message</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Sender</th>
            <th>Receiver</th>
            <th>Message</th>
            <th>Sent At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Sender.FullName</td>
                <td>@item.Receiver.FullName</td>
                <td>@item.Content</td>
                <td>@item.SentAt?.ToString("g")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.MessageId">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
